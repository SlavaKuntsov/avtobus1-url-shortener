@model IEnumerable<UrlShortener.Persistence.Entities.Url>

@{
    ViewData["Title"] = "Home Page";
}

<div class="flex flex-col gap-10">
    <div class="flex items-center justify-between">
        <h1 class="font-bold text-3xl">Data:</h1>

        <div class="flex flex-row items-center gap-6">
            <button
                type="button"
                onclick="location.reload()"
                class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                Refresh
            </button>
            <button
                class="w-fit bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
                <a class="" asp-area="" asp-controller="Home" asp-action="Url">Create new url</a>
            </button>
        </div>
    </div>

    @if (!Model.Any())
    {
        <p>Data not found</p>
    }
    else
    {
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-100">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                    Long URL
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                    Short URL
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                    Created On
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                    Counter
                </th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-300">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-base text-blue-600 hover:underline">
                        <a href="@item.LongUrl" target="_blank">@item.LongUrl</a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap font-semibold text-lg">
                        <a href="@item.ShortUrl" target="_blank" class="text-green-600 hover:underline">
                            @item.ShortUrl
                        </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-lg text-gray-500">
                        @item.CreatedOn.ToString("yyyy-MM-dd HH:mm")
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-lg text-gray-700">
                        @item.Counter
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>